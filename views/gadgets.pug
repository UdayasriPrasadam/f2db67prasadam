extends layout 

block content 
    h1= title
    div.container-fluid
        button.btn( class="btn-secondary ml-1", onclick = destination) Create
        div(class ="row m-1")
            each item, index in results
                - let destination = `dispatch(\"/gadgets/update?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`) #{item["gadget_type"]}, #{item["gadget_price"]}, #{item["gadget_version"]}
                    br
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    br
                    button.btn( class="btn-danger ml-1", onclick= destination) Delete
                    br
                    button.btn( class="btn-success ml-1", onclick= destination) Details

    script. 
        function dispatch(path) {
            window.location.href=path
        }
