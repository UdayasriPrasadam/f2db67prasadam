extends layout 

block content 
    h1= title
    div.container-fluid
        div.row
            each item, index in results
                div.col-sm-2(onclick=`buy(${index})`) #{item["gadget_type"]}, #{item["gadget_price"]}, #{item["gadget_version"]}
        

    script. 
        function buy(index) {
            alert("You purchased item " + index);
        }